            function calculatePickUpDate() {
                // Get the values from the input fields
                const dropOffDateValue = $('#Dropoffdateid').val();
                const transitDaysValue = parseInt($('#Transitdaysid').val());

                // Convert the drop-off date value to a Date object
                const dropOffDate = new Date(dropOffDateValue);

                // Subtract the transit days from the drop-off date to get the pick-up date
                dropOffDate.setDate(dropOffDate.getDate() - transitDaysValue);

                // Format the pick-up date as needed (e.g., YYYY-MM-DD)
                const pickUpDateFormatted = dropOffDate.toISOString().split('T')[0];

                // Set the calculated pick-up date to the input field
                $('#Pickupdateid').val(pickUpDateFormatted);
            }
