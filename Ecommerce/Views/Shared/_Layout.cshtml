<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SokoJiji | Online Marketplace for Products and Services</title>
    <meta name="description" content="SokoJiji is your one-stop online marketplace for a wide range of products and services. Discover top deals, shop for electronics, fashion, home goods, and more with ease. Enjoy secure payments and fast delivery." />
    <meta name="keywords" content="SokoJiji, online marketplace, e-commerce, shop online, buy electronics, fashion, home goods, secure payments, fast delivery" />
    <meta name="author" content="SokoJiji" />
    <meta name="google-adsense-account" content="ca-pub-2850934153859537">

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="@ViewData["Title"] - SokoJiji | Online Marketplace for Products and Services" />
    <meta property="og:description" content="SokoJiji is an online marketplace offering a diverse range of products including electronics, fashion, home goods, and more. Shop now for the best deals and enjoy secure shopping." />
    <meta property="og:image" content="https://sokojiji.uttambsolutions.com/images/sokojijilogo.png" />
    <meta property="og:url" content="https://sokojiji.uttambsolutions.com" />
    <meta property="og:type" content="website" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@ViewData["Title"] - SokoJiji | Online Marketplace for Products and Services" />
    <meta name="twitter:description" content="Explore SokoJiji for a wide selection of products and services. Shop online for electronics, fashion, home goods, and more with secure payments and fast delivery." />
    <meta name="twitter:image" content="https://sokojiji.uttambsolutions.com/images/sokojijilogo.png" />

    <!-- Schema.org Markup -->
    <meta itemprop="name" content="@ViewData["Title"] - SokoJiji | Online Marketplace for Products and Services" />
    <meta itemprop="description" content="SokoJiji provides an extensive range of products including electronics, fashion, home goods, and more. Enjoy a seamless online shopping experience with SokoJiji." />
    <meta itemprop="image" content="https://sokojiji.uttambsolutions.com/images/sokojijilogo.png" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css" rel="stylesheet" />
    <link href="~/lib/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css" rel="stylesheet" />
    <link href="~/lib/plugins/bs-stepper/css/bs-stepper.min.css" rel="stylesheet" />
    <link href="~/lib/plugins/datatables-bs4/css/datatables.bootstrap4.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link href="~/lib/plugins/datatables-buttons/css/buttons.bootstrap4.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link href="~/dist/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2850934153859537"
            crossorigin="anonymous"></script>
</head>
<body class="hold-transition layout-top-nav layout-navbar-fixed">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand-md navbar-light navbar-white bg-custom">
            <div class="container-fluid">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <img src="~/images/sokojijilogo.png" alt="SokoJiji Logo" class="brand-image elevation-3">
                    <span class="brand-text font-weight-light text-white font-weight-bold fw-bold text-uppercase">SokoJiji</span>
                </a>

                <!-- Right navbar links for large screens -->
                <ul class="nav-item order-1 order-md-3 navbar-nav navbar-no-expand ml-auto">
                    <li class="nav-item">
                        <a asp-action="Signin" asp-controller="Account" asp-area="" class="nav-link text-white fw-bold font-weight-bold text-uppercase">SIGNIN</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    <div id="AlertsContainer">
                        @{
                            await Html.RenderPartialAsync("_Alerts");
                        }
                    </div>
                    <main role="main" class="pb-3 mt-2 pt-2">
                        @RenderBody()
                    </main>
                </div>
            </section>
        </div>

        <footer class="main-footer bg-dark">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <h5 class="text-white">About SokoJiji</h5>
                        <p class="text-white">
                            SokoJiji is an online marketplace offering a wide range of products and services. From electronics and fashion to home goods and more, SokoJiji provides a seamless shopping experience with secure payments and fast delivery.
                        </p>
                    </div>
                    <div class="col-sm-3">
                        <h5 class="text-white">Contact Us</h5>
                        <p class="text-white">
                            <strong>Address:</strong> 123 Tech Street, Nairobi, Kenya<br />
                            <strong>Phone:</strong> +254 728 316050<br />
                            <strong>Email:</strong> info@sokojiji.com
                        </p>
                    </div>
                    <div class="col-sm-3">
                        <h5 class="text-white">Follow Us</h5>
                        <p class="text-white">
                            <a href="https://www.facebook.com/sokojiji" target="_blank" class="text-reset">
                                <i class="fab fa-facebook-f text-white"></i> Facebook
                            </a><br />
                            <a href="https://www.twitter.com/sokojiji" target="_blank" class="text-reset">
                                <i class="fab fa-twitter text-white"></i> Twitter
                            </a><br />
                            <a href="https://www.linkedin.com/company/sokojiji" target="_blank" class="text-reset">
                                <i class="fab fa-linkedin-in text-white"></i> LinkedIn
                            </a>
                        </p>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-sm-12 text-center text-white">
                        &copy; 2024 SokoJiji. All rights reserved. | <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacy Policy</a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/lib/plugins/jquery/jquery.min.js"></script>
    <script src="~/lib/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/lib/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/plugins/datatables-buttons/js/datatables.buttons.min.js"></script>
    <script src="~/lib/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/lib/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/lib/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/lib/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-Z24LLL0113"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-Z24LLL0113');
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
