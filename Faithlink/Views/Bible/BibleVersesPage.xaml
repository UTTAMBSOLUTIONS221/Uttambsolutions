<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Faithlink.Views.Bible.BibleVersesPage">

    <ContentPage.Resources>
        <!-- No need to instantiate here -->
    </ContentPage.Resources>

    <StackLayout Padding="20">

        <!-- Display Languages -->
        <Label Text="Languages" FontSize="Large" />
        <ListView x:Name="LanguagesListView" ItemsSource="{Binding Languages}"
                  VerticalOptions="FillAndExpand" HeightRequest="200">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Display Verse of the Day -->
        <Label Text="Verse of the Day" FontSize="Large" />
        <Label x:Name="VerseLabel" Text="{Binding VerseOfTheDay}" />

    </StackLayout>

</ContentPage>
