<?xml version="1.0" encoding="utf-8" ?>
<StackLayout Padding="20" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Faithlink.Controls.FlyoutHeaderControl">
    <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
        <Frame WidthRequest="100" HeightRequest="100" CornerRadius="50" IsClippedToBounds="True" BorderColor="#0a506c" HasShadow="False" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="user.png" Aspect="AspectFill"/>
        </Frame>
        <Label x:Name="lblUserName" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label x:Name="lblUserRole" FontSize="16" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalOptions="Center" />
    </VerticalStackLayout>
    <Label x:Name="lblUserEmail" FontSize="18" />
</StackLayout>
