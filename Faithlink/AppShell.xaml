<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Faithlink.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Faithlink"
    xmlns:dashboardPages="clr-namespace:Faithlink.Views.Dashboard"
    xmlns:models="clr-namespace:Faithlink.Models"
    Shell.TabBarIsVisible="False"
    xmlns:startupPages="clr-namespace:Faithlink.Views.Startup">


    <ShellContent FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate startupPages:LoadingPage}" Route="LoadingPage" />

    <ShellContent
        Title="Login Page" FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate startupPages:LoginPage}"
        Route="LoginPage" />


    <Shell.FlyoutFooter>
        <StackLayout Padding="20">
            <Button Text="Sign Out" FontAttributes="Bold" Command="{Binding SignOutCommand}" />
        </StackLayout>
    </Shell.FlyoutFooter>

</Shell>