@model DBL.Entities.Dailychurchevent
<div class="modal-header bg-custom">
    <h5 class="modal-title text-uppercase" id="Uttambsolutionsmodallabel">Event Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-sm-12">
            <input asp-for="@Model.Eventid" id="Eventid" hidden />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <div class="form-group">
                <label class="font-weight-light">Event Name</label>
                <input class="form-control form-control-sm" asp-for="@Model.Eventname" id="Eventnameid" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Location</label>
                <input class="form-control form-control-sm" asp-for="@Model.Locations" id="Locationsid" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Start Date</label>
                <input class="form-control form-control-sm" type="datetime-local" asp-for="@Model.Startdatetime" id="Startdatetimeid" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">End Date</label>
                <input class="form-control form-control-sm" type="datetime-local" asp-for="@Model.Enddatetime" id="Enddatetimeid" />
            </div>
        </div>
    </div>
    <div class="row">
         <div class="col-sm-12">
            <div class="form-group">
                <label class="font-weight-light">Event Image</label>
                <input class="form-control form-control-sm" type="file" id="Eventimageurlid" onchange="churcheventFileChanged(event)" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label class="font-weight-light">Description</label>
                <textarea class="form-control form-control-sm" asp-for="@Model.Descriptions" id="Descriptionsid"></textarea>
            </div>
        </div>
    </div>        
    <div class="row">
        <div class="col-sm-12" hidden>
            <div class="form-group">
                <label class="font-weight-light">Images Url</label>
                <input class="form-control form-control-sm" id="UttambsolutionsimageurlId" asp-for="@Model.Eventimageurl" readonly />
            </div>
        </div>
        <div id="Uttambsolutionsimagespreviewcontainer"></div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" id="savechurcheventid" onclick="savechurcheventdata();">
        <span id="buttonText">SAVE</span><span id="processingSpinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true" style="display: none;"></span>
    </button>
</div>
