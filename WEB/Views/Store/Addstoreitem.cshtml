@model DBL.Entities.Systemstoreitems
<div class="modal-header bg-custom">
    <h5 class="modal-title text-uppercase text-white font-weight-bold" id="Uttambsolutionsmodallabel">Store Item</h5>
    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-sm-12">
            <input asp-for="@Model.Storeitemid" id="Storeitemid" hidden />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <div class="form-group">
                <label class="font-weight-light">Item Name</label>
                <input class="form-control form-control-sm" asp-for="@Model.Storeitemname" id="Storeitemnameid" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Brand Name</label>
                <input class="form-control form-control-sm" asp-for="@Model.Itembrandname" id="Itembrandnameid" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Buying Price</label>
                <input class="form-control form-control-sm" type="number" asp-for="@Model.Itembuyingprice" id="Itembuyingpriceid" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Selling Price</label>
                <input class="form-control form-control-sm" type="number" asp-for="@Model.Itemsellingprice" id="Itemsellingpriceid" />
            </div>
        </div>
    </div>
    <div class="row">
         <div class="col-sm-12">
            <div class="form-group">
                <label class="font-weight-light">Event Image</label>
                <input class="form-control form-control-sm" type="file" id="Storeproductimageurlid" multiple onchange="storeProductImageFileChanged(event)" />
            </div>
        </div>
    </div>  
    <div class="row">
        <div class="col-sm-12" hidden>
            <div class="form-group">
                <label class="font-weight-light">Images Url</label>
                <input class="form-control form-control-sm" id="UttambsolutionsimageurlId" readonly />
            </div>
        </div>
        <div id="Uttambsolutionsimagespreviewcontainer"></div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" id="savestoreproductid" onclick="savestoreproductdata();">
        <span id="buttonText">SAVE</span><span id="processingSpinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true" style="display: none;"></span>
    </button>
</div>
