@model IEnumerable<DBL.Entities.Systempermissions>;
@{
    ViewData["Title"] = "Systempermissionlist";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card card-outline card-info">
            <div class="card-header py-1">
                <div class="row">
                    <div class="col-sm-8">
                        <h6 class="font-weight-bold text-sm card-title">Permissions</h6>
                    </div>
                    <div class="col-sm-4">
                        <a asp-action="Addsystempermissions" asp-controller="SettingsManagement" asp-route-Permissionid="0" asp-area="" id="CAN_ADD_PERMISSION" class="btn-info btn-xs btn-outline-info text-white float-right font-weight-bold text-uppercase" data-target="#FuelcardsystemModal" data-toggle="modal" data-backdrop="static" data-keyboard="false">Add Permission</a>
                    </div>
                </div>
            </div>
            <div class="card-body table-responsive table-responsive-sm">
                <table class="table table-bordered table-striped compact table-sm table-responsive-sm nowrap text-nowrap" id="AllsystemDataTables">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Is Admin</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Permissionname</td>

                                    <td>
                                        @if (@item.Isadmin)
                                        {
                                            <span class="badge badge-success text-white">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary text-white">No</span>
                                        }
                                    </td>
                                    <td class="text-right">
                                        <a asp-action="Addsystempermissions" asp-controller="SettingsManagement" asp-route-Permissionid="@item.PermissionId" asp-area="" id="CAN_EDIT_PERMISSION" class="btn-info btn-xs btn-outline-info text-white float-right font-weight-bold text-uppercase" data-target="#FuelcardsystemModal" data-toggle="modal" data-backdrop="static" data-keyboard="false">Edit</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>