@model DBL.Entities.Systemservices
<div class="modal-header">
    <h5 class="text-sm modal-title" id="Uttambsolutionsmodallabel">Services</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-sm-12">
            <input asp-for="@Model.Serviceid" id="Serviceid" hidden />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <div class="form-group">
                <label class="font-weight-light">Service Name</label>
                <input class="form-control form-control-sm" asp-for="@Model.Servicename" id="Servicenameid" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Subscription Fee</label>
                <input class="form-control form-control-sm" type="number" asp-for="@Model.Subscriptionfee" id="Subscriptionfeeid" />
            </div>
        </div>
    </div>
    <h4 class="card-title">Service Items</h4>
    <br />
   <hr />
    <div class="row">
        <div class="col-sm-12">
            <label for="Systemserviceitemnameid" class="form-label font-weight-normal">Service item</label>
            <div class="input-group">
                <input id="Serviceitemid" hidden>
                <input class="form-control form-control-sm col-sm-6" id="Systemserviceitemnameid" placeholder="Add Service Item" aria-label="Systemserviceitemname">
                <input class="form-control form-control-sm col-sm-6" id="Systemserviceitemimageurlid" type="file">
                <div class="input-group-append">
                    <button onclick="addserviceitemdata()" class="btn btn-info btn-xs text-white font-weight-bold text-uppercase" style="display: inline-block !important;">
                        Add
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12" hidden>
            <div class="form-group">
                <label class="font-weight-light">Images Url</label>
                <input class="form-control form-control-sm" id="UttambsolutionsparagraphimageurlId" readonly />
            </div>
        </div>
        <div id="Uttambsolutionsparagraphimagespreviewcontainer"></div>
    </div>
    <div class="row py-1">
        <div class="col-sm-12 table-responsive">
            <table class="table table-bordered table-striped compact table-sm table-responsive-sm nowrap text-nowrap font-weight-light w-100" id="AllsystemDataTables1">
                <thead>
                    <tr>
                        <th hidden></th>
                        <th hidden></th>
                        <th>NAME</th>
                        <th hidden></th>
                        <th class="text-right">ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Serviceitems != null)
                    {
                        foreach (var data in Model.Serviceitems)
                        {
                            <tr>
                                <td hidden>@data.Serviceitemid</td>
                                <td hidden>@data.Serviceid</td>
                                <td>@data.Serviceitemname</td>
                                <td hidden>@data.Serviceitemimageurl</td>
                                <td class="text-right"><button class="btn-info btn-xs btn-outline-info text-white font-weight-bold text-uppercase main m-1" onclick="editblogparagraphdata(this.parentNode.parentNode)">Edit</button><button class="btn-info btn-xs btn-outline-info text-white font-weight-bold text-uppercase main m-1" onclick="updateblogparagraphdata(this.parentNode.parentNode)">Update</button></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" id="savesystemtserviceid" onclick="savesystemtservicedata();">
        <span id="buttonText">SAVE</span><span id="processingSpinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true" style="display: none;"></span>
    </button>
</div>
