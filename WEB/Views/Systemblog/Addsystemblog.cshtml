@model DBL.Entities.Systemblog

<div class="modal-header">
    <h5 class="text-sm modal-title" id="Uttambsolutionsmodallabel">Blog Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <!-- Section 1: Blog Details -->
    <div id="section1" class="section">
        <h6>Step 1: Blog Details</h6>
        <div class="row">
            <div class="col-sm-9">
                <div class="form-group">
                    <label class="font-weight-light">Blog Title</label>
                    <input class="form-control form-control-sm" asp-for="@Model.Blogname" id="Blognameid" required />
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="font-weight-light">Category</label>
                    <select class="form-control form-control-sm" asp-for="@Model.Blogcategoryid" id="Blogcategoryidid" required>
                        <option value="">---Select---</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Unisex">Unisex</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="font-weight-light">Blog Summary</label>
                    <textarea class="form-control form-control-sm" asp-for="@Model.Summary" id="Summaryid" required></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="font-weight-light">Blog Content</label>
                    <textarea class="form-control form-control-sm" asp-for="@Model.Blogcontent" id="Blogcontentid" required></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="font-weight-light">Blog Primary Image</label>
                    <input class="form-control form-control-sm font-weight-light" type="file" onchange="systemBlogFileChanged(event)" required />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12" hidden>
                <div class="form-group">
                    <label class="font-weight-light">Images Url</label>
                    <input class="form-control form-control-sm" id="UttambsolutionsimagesurlId" readonly />
                </div>
            </div>
            <div id="Uttambsolutionsimagespreviewcontainer"></div>
        </div>
        <button type="button" class="btn btn-sm btn-secondary float-right" onclick="nextSection()">Next</button>
    </div>

    <!-- Section 2: Product Features -->
    <div id="section2" class="section" style="display: none;">
        <h6>Step 2: Product Features</h6>
        <button type="button" class="btn btn-sm btn-secondary float-left" onclick="prevSection()">Previous</button>
        <button type="button" class="btn btn-sm btn-secondary float-right" onclick="nextSection()">Next</button>
    </div>

    <!-- Section 3: Product Description and Images -->
    <div id="section3" class="section" style="display: none;">
        <h6>Step 3: Product Description and Images</h6>
        <button type="button" class="btn btn-sm btn-secondary float-left" onclick="prevSection()">Previous</button>
        <button class="btn btn-sm btn-info font-weight-bold float-right" type="button" id="saveBlogData" onclick="saveBlogData();">
            <span id="buttonText">SAVE</span>
            <span id="processingSpinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true" style="display: none;"></span>
        </button>
    </div>
</div>
