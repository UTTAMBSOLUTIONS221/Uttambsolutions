@model DBL.Entities.Systemproperty
@{
    var Systemcounty = ViewData["Systemcountylists"] as List<SelectListItem>;
    var Systemhousebenefit = ViewData["Systemhousebenefitslists"] as List<SelectListItem>;
    var Systemhousedepositfee = ViewData["Systemhousedepositfeeslists"] as List<SelectListItem>;
    bool isChecked = false;
}
<div class="modal-header">
    <h5 class="modal-title" id="Uttambsolutionsmodallabel">Properties Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <!-- Section 1: Job Details -->
    <div id="section1" class="section">
        <h6 class="mb-3">Step 1: House Details</h6>
          <input class="form-control form-control-sm" asp-for="Propertyhouseid" id="Propertyhouseid" hidden />
     <div class="row">
        <div class="col-sm-2">
            <div class="form-group">
                <label class="font-weight-light">Agency?</label>
                <input class="form-control form-control-sm" type="checkbox" asp-for="@Model.Isagency" id="Ispropertyhouseagencyid" onchange="toggleOwnerName()" />
            </div>
        </div>
        <div class="col-sm-3" id="OwnerNameContainer" style="display: none;">
            <div class="form-group">
                <label class="font-weight-light">Owner Name</label>
                <input class="form-control form-control-sm" asp-for="Propertyhousename" id="Propertyhousenameid" />
            </div>
        </div>
        <div class="col-sm-10" id="HouseNameContainer">
            <div class="form-group">
                <label class="font-weight-light">House Name</label>
                <input class="form-control form-control-sm" asp-for="Propertyhousename" id="Propertyhousenameid" required />
            </div>
        </div>
    </div>

        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="font-weight-light">County</label>
                    <select class="form-control form-control-sm" id="Systemcountyid" asp-for="@Model.Countyid" asp-items="@Systemcounty" onclick="getsystemcountysubcounty(this.value)" required>
                        <option value="">---Select---</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="font-weight-light">Sub County</label>
                    <select class="form-control form-control-sm" id="Systemsubcountyid" asp-for="@Model.Subcountyid" onclick="getsystemsubcountysubcounty(this.value)" required>
                        <option value="">---Select---</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="font-weight-light">Town/Ward</label>
                    <select class="form-control form-control-sm" id="Systemsubcountywardid" asp-for="@Model.Subcountywardid" required>
                        <option value="">---Select---</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-9">
                <div class="form-group">
                    <label class="font-weight-light">Street/Landmark</label>
                    <input class="form-control form-control-sm" asp-for="@Model.Streetorlandmark" placeholder="start with near land mark and next to a landmark" id="Streetorlandmarkid" required />
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="font-weight-light">House Deposit?</label>
                    <input class="form-control form-control-sm" type="checkbox" asp-for="@Model.Hashousedeposit" id="Hashousedepositid" required />
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-sm btn-secondary float-right" onclick="nextSection()">Next</button>
    </div>
    <!-- Section 2: Key Responsibilities -->
    <div id="section2" class="section" style="display: none;">
        <h6 class="mb-4">Step 2: House Rooms and Amount</h6>
        <input class="form-control form-control-sm" id="Jobfunctionid" hidden />
        <div class="container">
            <div class="row align-items-end">
                <div class="col-sm-4 mb-2">
                    <div class="form-group">
                        <label class="text-sm font-weight-light fw-light">Room Size</label>
                        <select class="form-control form-control-sm select2" id="Roomsizeid">
                            <option value="">---Select---</option>
                            <option value="Single">Single</option>
                            <option value="Double">Double</option>
                            <option value="Bed Sitter">Bed Sitter</option>
                            <option value="One Bedroom">One Bedroom</option>
                            <option value="Two Bedroom">Two Bedroom</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-3 mb-2">
                    <div class="form-group">
                        <label class="text-sm font-weight-light fw-light">How Many</label>
                        <select class="form-control form-control-sm select2" id="Numberofroomsizeid">
                            <option value="">---Select---</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                            <option value="11">11</option>
                            <option value="12">12</option>
                            <option value="13">13</option>
                            <option value="14">14</option>
                            <option value="15">15</option>
                            <option value="16">16</option>
                            <option value="17">17</option>
                            <option value="18">18</option>
                            <option value="19">19</option>
                            <option value="20">20</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-3 mb-2">
                    <div class="form-group">
                        <label class="text-sm font-weight-light fw-light">Rent Amount</label>
                        <input type="text" class="form-control form-control-sm" id="Roomsizerentamountid" placeholder="Rent Amount" aria-label="Rentamount" />
                    </div>
                </div>
                <div class="col-sm-2 mb-4">
                    <button class="btn btn-sm btn-secondary w-100" onclick="addsystempropertyroomsdata()">Add</button>
                </div>
            </div>
        </div>
        <div class="col-sm-12 table-responsive">
            <table class="table table-bordered table-striped compact table-sm nowrap text-nowrap" id="AllsystemDataTables2">
                <thead>
                    <tr>
                        <th hidden>Room sizeid</th>
                        <th class="font-weight-light fw-light">Room Size</th>
                        <th class="font-weight-light fw-light">Units</th>
                        <th class="font-weight-light fw-light">Rent Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Propertyhousesize != null)
                    {
                        foreach (var data in Model.Propertyhousesize)
                        {
                            <tr>
                                <td hidden>@data.Systempropertyhousesizeid</td>
                                <td><input type="text" class="form-control form-control-sm font-weight-light system-house-size-name" value="@data.Systemhousesizename" readonly /></td>
                                <td><input type="number" class="form-control form-control-sm font-weight-light system-property-house-size-unit" value="@data.Systempropertyhousesizeunits" /></td>
                                <td><input type="number" class="form-control form-control-sm font-weight-light system-property-house-size-rent" value="@data.Systempropertyhousesizerent" /></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-between mt-4">
            <button type="button" class="btn btn-sm btn-secondary" onclick="prevSection()">Previous</button>
            <button type="button" class="btn btn-sm btn-secondary" onclick="nextSection()">Next</button>
        </div>
    </div>

    <!-- Section 3: House Deposits and Fees -->
    <div id="section3" class="section" style="display: none;">
        <h6 class="mb-4">Step 3: House Deposits and Fees</h6>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 table-responsive">
                    <table class="table table-bordered table-striped compact table-sm nowrap text-nowrap" id="AllsystemDataTables3">
                        <thead>
                            <tr>
                                <th hidden></th>
                                <th>DEPOSIT NAME</th>
                                <th>DEPOSIT AMOUNT </th>
                            </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td hidden></td>
                            <td>
                                <select class="form-control form-control-sm font-weight-light select2 pump-cashier-attendant" id="pump-cashier-attendant" asp-items="@Systemhousedepositfee">
                                    <option value="">--select--</option>
                                </select>
                            </td>
                            <td><input type="number" class="form-control form-control-sm font-weight-light pump-closing-electronic" /></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-between mt-3">
            <button type="button" class="btn btn-secondary btn-sm" onclick="prevSection()">Previous</button>
            <button type="button" class="btn btn-secondary btn-sm" onclick="nextSection()">Next</button>
        </div>
    </div>

    <!-- Section 4: House Benefits -->
    <div id="section4" class="section" style="display: none;">
        <h6 class="mb-4">Step 4: House Benefits and Services to Enjoy</h6>
        <input class="form-control form-control-sm" id="Jobfunctionid" hidden />
        <div class="container">
            

           <div class="row">
             
           </div>
        </div>
        <div class="d-flex justify-content-between mt-3">
            <button type="button" class="btn btn-secondary btn-sm" onclick="prevSection()">Previous</button>
            <button type="button" class="btn btn-sm btn-info font-weight-bold" id="saveopportunityid" onclick="saveopportunitydata();">
                <span id="buttonText">Save</span>
                <span id="processingSpinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true" style="display: none;"></span>
            </button>
        </div>
    </div>
</div>
