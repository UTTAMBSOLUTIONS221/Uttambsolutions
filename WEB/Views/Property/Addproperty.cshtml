@model DBL.Entities.Systemproperty
@{
    var Systemcounty = ViewData["Systemcountylists"] as List<SelectListItem>;
}
<div class="modal-header">
    <h5 class="modal-title" id="Uttambsolutionsmodallabel">Properties Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <!-- Section 1: Job Details -->
    <div id="section1" class="section">
        <h6 class="mb-3">Step 1: House Details</h6>
        <div class="row">
                 <input class="form-control form-control-sm" asp-for="Propertyid" id="Propertyid" hidden />
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="font-weight-light">House Name</label>
                    <input class="form-control form-control-sm" asp-for="Propertyname" id="Rolenameid" required />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="font-weight-light">County</label>
                    <select class="form-control form-control-sm" id="Systemcountyid" asp-for="@Model.Countyid" asp-items="@Systemcounty" onclick="getsystemcountysubcounty(this.value)" required>
                        <option value="">---Select---</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="font-weight-light">Sub County</label>
                    <select class="form-control form-control-sm" id="Systemsubcountyid" asp-for="@Model.Subcountyid" onclick="getsystemsubcountysubcounty(this.value)" required>
                        <option value="">---Select---</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="font-weight-light">Town</label>
                    <select class="form-control form-control-sm" id="Systemsubcountywardid" asp-for="@Model.Subcountywardid" required>
                        <option value="">---Select---</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="font-weight-light">Street/Landmark</label>
            <input class="form-control form-control-sm" asp-for="@Model.Streetorlandmark" id="JobDescriptionid" required />
        </div>
        <button type="button" class="btn btn-sm btn-secondary float-right" onclick="nextSection()">Next</button>
    </div>
    <!-- Section 2: Key Responsibilities -->
    <div id="section2" class="section" style="display: none;">
        <h6 class="mb-4 font-weight-bold">Step 2: Key Responsibilities</h6>



        <div class="d-flex justify-content-between mt-4">
            <button type="button" class="btn btn-sm btn-secondary" onclick="prevSection()">Previous</button>
            <button type="button" class="btn btn-sm btn-secondary" onclick="nextSection()">Next</button>
        </div>
    </div>

    <!-- Section 3: Qualification -->
    <div id="section3" class="section" style="display: none;">
        <h6 class="mb-3">Step 3:  Qualifications</h6>
        <input class="form-control form-control-sm" id="Jobqualificationid" hidden />
        <div class="input-group">
            <input type="text" class="form-control form-control-sm" id="SystemjobqualificationId" placeholder="Enter qualification" aria-label="Qualification" />
            <div class="input-group-append">
                <button class="btn btn-sm btn-secondary" onclick="addsystemjobqualificationdata()">Add</button>
            </div>
        </div>
        <div class="table-responsive mt-3">
            <table class="table table-bordered table-striped table-sm text-nowrap w-100" id="AllsystemDataTables11">
                <thead>
                    <tr>
                        <th hidden></th>
                        <th>Qualification</th>
                        <th class="text-right">Action</th>
                    </tr>
                </thead>
                <tbody>
                  
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <button type="button" class="btn btn-secondary btn-sm" onclick="prevSection()">Previous</button>
            <button type="button" class="btn btn-secondary btn-sm" onclick="nextSection()">Next</button>
        </div>
    </div>

    <!-- Section 4: Skills -->
    <div id="section4" class="section" style="display: none;">
        <h6 class="mb-3">Step 4: Preferred Skills</h6>
        <input class="form-control form-control-sm" id="Jobskillid" hidden />
        <div class="input-group">
            <input type="text" class="form-control form-control-sm" id="SystemjobskillnameId" placeholder="Enter skill" aria-label="Skill" />
            <div class="input-group-append">
                <button class="btn btn-sm btn-secondary" onclick="addsystemjobskilldata()">Add</button>
            </div>
        </div>
        <div class="table-responsive mt-3">
            <table class="table table-bordered table-striped table-sm text-nowrap w-100" id="AllsystemDataTables12">
                <thead>
                    <tr>
                        <th hidden></th>
                        <th>Skill</th>
                        <th class="text-right">Action</th>
                    </tr>
                </thead>
                <tbody>
                 
                </tbody>
            </table>
        </div>
        <button type="button" class="btn btn-sm btn-secondary float-left" onclick="prevSection()">Previous</button>
        <button type="button" class="btn btn-sm btn-secondary float-right" onclick="nextSection()">Next</button>
    </div>


    <!-- Section 5: Qualifications -->
    <div id="section5" class="section" style="display: none;">
        <h6 class="mb-3">Step 4: Benefits</h6>
        <input class="form-control form-control-sm" id="JobbenefitId" hidden />
        <div class="input-group">
            <input type="text" class="form-control form-control-sm" id="SystemjobbenefitnameId" placeholder="Enter Benefit" aria-label="Benefit" />
            <div class="input-group-append">
                <button class="btn btn-sm btn-secondary" onclick="addsystemjobbenfitdata()">Add</button>
            </div>
        </div>
        <div class="table-responsive mt-3">
            <table class="table table-bordered table-striped table-sm text-nowrap w-100" id="AllsystemDataTables13">
                <thead>
                    <tr>
                        <th hidden></th>
                        <th>Benefit</th>
                        <th class="text-right">Action</th>
                    </tr>
                </thead>
                <tbody>
                   
                </tbody>
            </table>
        </div>
        <button type="button" class="btn btn-sm btn-secondary float-left" onclick="prevSection()">Previous</button>
        <button type="button" class="btn btn-sm btn-info font-weight-bold" id="saveopportunityid" onclick="saveopportunitydata();">
            <span id="buttonText">Save</span>
            <span id="processingSpinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true" style="display: none;"></span>
        </button>
    </div>
</div>
