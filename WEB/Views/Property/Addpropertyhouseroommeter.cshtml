@model DBL.Entities.Systempropertyhouseroommeters
<div class="modal-header">
    <h5 class="text-sm modal-title" id="Uttambsolutionsmodallabel">House Water Meter Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="col-sm-12 table-responsive">
        <table class="table table-bordered table-striped compact table-sm nowrap text-nowrap w-100">
            <thead>
                <tr>
                    <th hidden>Meterid</th>
                    <th hidden>Roomsizeid</th>
                    <th class="font-weight-light fw-light">Meter Number</th>
                    <th class="font-weight-light fw-light">Opening Meter</th>
                    <th class="font-weight-light fw-light">Units</th>
                    <th class="font-weight-light fw-light">Closing Meter</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td hidden>@Model.Systempropertyhousemeterid</td>
                    <td hidden>@Model.Systempropertyhouseroomid</td>
                    <td><input type="text" class="form-control form-control-sm font-weight-light system-house-size-name" value="@Model.Systempropertyhouseroommeternumber" /></td>
                    <td><input type="text" class="form-control form-control-sm font-weight-light system-house-size-name" value="@Model.Openingmeter" readonly /></td>
                    <td><input type="number" class="form-control form-control-sm font-weight-light system-property-house-size-unit" value="@Model.Movedmeter" required /></td>
                    <td><input type="number" class="form-control form-control-sm font-weight-light system-property-house-size-rent" value="@Model.Closingmeter" readonly /></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-sm-12 table-responsive">
            <table class="table table-bordered table-striped compact table-sm nowrap text-nowrap w-100" id="AllsystemDataTables1">
                <thead>
                    <tr>
                        <th>Opening Meter</th>
                        <th>Units</th>
                        <th>Closing Meter</th>
                        <th>Date Read</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Data != null)
                    {
                        foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>@item.Openingmeter</td>
                                <td>@item.Movedmeter</td>
                                <td>@item.Closingmeter</td>
                                <td>@item.Datecreated</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" id="savesystempropertyroomid" onclick="savesystempropertyroomdata();">
        <span id="buttonText">SAVE</span><span id="processingSpinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true" style="display: none;"></span>
    </button>
</div>
