<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maqaoplus.MainPage"
             xmlns:converters="clr-namespace:Maqaoplus.Helpers"
             xmlns:local="clr-namespace:Maqaoplus.Helpers"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#ffffff"
             Title="JCM CHURCH INT’L.">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:NullToImageConverter x:Key="NullToImageConverter" />
            <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <!-- Define Row Heights for Header, Content, and Footer -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Summary Data Section with Smaller Cards -->
        <StackLayout Grid.Row="0" Spacing="10" Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <!-- Listed Properties Card -->
            <Frame BackgroundColor="#0a506c" CornerRadius="10" Padding="7" HasShadow="True" WidthRequest="120" HeightRequest="60">
                <StackLayout Spacing="2" HorizontalOptions="CenterAndExpand">
                    <Label Text="Properties" TextColor="White" FontSize="12" HorizontalOptions="Center" />
                    <Label Text="{Binding Maqaoplussummarydata.Listedproperties}" TextColor="White" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <!-- Registered Tenants Card -->
            <Frame BackgroundColor="#0a506c" CornerRadius="10" Padding="7" HasShadow="True" WidthRequest="120" HeightRequest="60">
                <StackLayout Spacing="2" HorizontalOptions="CenterAndExpand">
                    <Label Text="Tenants" TextColor="White" FontSize="12" HorizontalOptions="Center" />
                    <Label Text="{Binding Maqaoplussummarydata.Registeredtenants}" TextColor="White" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <!-- Listed Jobs Card -->
            <Frame BackgroundColor="#0a506c" CornerRadius="10" Padding="7" HasShadow="True" WidthRequest="120" HeightRequest="60">
                <StackLayout Spacing="2" HorizontalOptions="CenterAndExpand">
                    <Label Text="Jobs" TextColor="White" FontSize="12" HorizontalOptions="Center" />
                    <Label Text="{Binding Maqaoplussummarydata.Listedjobs}" TextColor="White" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" />
                </StackLayout>
            </Frame>
        </StackLayout>

        <StackLayout Grid.Row="1" Spacing="10" Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <!-- Occupied Houses Card -->
            <Frame BackgroundColor="#0a506c" CornerRadius="10" Padding="7" HasShadow="True" WidthRequest="120" HeightRequest="60">
                <StackLayout Spacing="2" HorizontalOptions="CenterAndExpand">
                    <Label Text="Occupied" TextColor="White" FontSize="12" HorizontalOptions="Center" />
                    <Label Text="{Binding Maqaoplussummarydata.Occupiedhouses}" TextColor="White" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" />
                </StackLayout>
            </Frame>
            <!-- Collected Houses Rent -->
            <Frame BackgroundColor="#0a506c" CornerRadius="10" Padding="7" HasShadow="True" WidthRequest="120" HeightRequest="60">
                <StackLayout Spacing="2" HorizontalOptions="CenterAndExpand">
                    <Label Text="Collections" TextColor="White" FontSize="12" HorizontalOptions="Center" />
                    <Label Text="{Binding Maqaoplussummarydata.Collectedrent}" TextColor="White" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" />
                </StackLayout>
            </Frame>
        </StackLayout>

        <!-- Main Content - Property Listings -->
        <AbsoluteLayout Grid.Row="2" IsVisible="{Binding IsDataLoaded}">
            <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
                <StackLayout Spacing="20">

                    <!-- Search Bar -->
                    <Frame CornerRadius="10" Padding="0" BackgroundColor="White" BorderColor="#0a506c" HasShadow="True" Margin="4,10">
                        <SearchBar Placeholder="Search properties..." BackgroundColor="Transparent" Margin="5,0" HeightRequest="40" />
                    </Frame>

                    <!-- Grid for Property Listings -->
                    <CollectionView ItemsSource="{Binding Maqaoplussummarydata.Vacanthouses}" ItemsLayout="HorizontalGrid, 2">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="4" Margin="4" HasShadow="True" BorderColor="LightGray" CornerRadius="10" HeightRequest="180">
                                    <Grid Padding="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Image and Data -->
                                        <Grid Grid.Row="0" ColumnSpacing="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Image on the Left -->
                                            <Image Source="{Binding Primaryimageurl, Converter={StaticResource NullToImageConverter}}" 
                                                   Aspect="AspectFill" HeightRequest="100" Grid.Column="0" />

                                            <!-- Data on the Right -->
                                            <StackLayout Grid.Column="1" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                                                <Label Text="{Binding Propertyhousename}" FontSize="14" FontAttributes="Bold" TextColor="#0a506c" MaxLines="1" />
                                                <Label Text="{Binding Systempropertyhousesizename,StringFormat='Rooms: {0}'}" FontSize="12" TextColor="#0a506c" />
                                                <Label Text="{Binding Streetorlandmark}" FontSize="12" TextColor="Black" MaxLines="2" />
                                            </StackLayout>
                                        </Grid>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </ScrollView>
        </AbsoluteLayout>

        <!-- Footer -->
        <StackLayout Grid.Row="3" BackgroundColor="#ffffff" Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="End">
            <Label Text="{Binding CopyrightText}" HorizontalOptions="CenterAndExpand" TextColor="#0a506c" TextTransform="Uppercase" FontAttributes="Bold"/>
        </StackLayout>
    </Grid>
</ContentPage>
