<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maqaoplus.MainPage"
             xmlns:converters="clr-namespace:Maqaoplus.Helpers"
             xmlns:local="clr-namespace:Maqaoplus.Helpers"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#ffffff"
             Title="JCM CHURCH INT’L.">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:NullToImageConverter x:Key="NullToImageConverter" />
            <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <!-- Define Row Heights for Header, Content, and Footer -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Summary Data Section -->
        <StackLayout Grid.Row="0" Padding="10" Spacing="20" Orientation="Horizontal">
            <!-- Listed Properties Card -->
            <Frame BackgroundColor="#0a506c" CornerRadius="10" Padding="15" HasShadow="True" WidthRequest="160">
                <StackLayout Spacing="5" HorizontalOptions="CenterAndExpand">
                    <Label Text="Listed Properties" TextColor="White" FontSize="14" HorizontalOptions="Center" />
                    <Label Text="{Binding Maqaoplussummarydata.Listedproperties}" TextColor="White" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <!-- Registered Tenants Card -->
            <Frame BackgroundColor="#0a506c" CornerRadius="10" Padding="15" HasShadow="True" WidthRequest="160">
                <StackLayout Spacing="5" HorizontalOptions="CenterAndExpand">
                    <Label Text="Registered Tenants" TextColor="White" FontSize="14" HorizontalOptions="Center" />
                    <Label Text="{Binding Maqaoplussummarydata.Registeredtenants}" TextColor="White" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />
                </StackLayout>
            </Frame>
        </StackLayout>

        <StackLayout Grid.Row="0" Padding="10" Spacing="20" Orientation="Horizontal">
            <!-- Listed Jobs Card -->
            <Frame BackgroundColor="#0a506c" CornerRadius="10" Padding="15" HasShadow="True" WidthRequest="160">
                <StackLayout Spacing="5" HorizontalOptions="CenterAndExpand">
                    <Label Text="Listed Jobs" TextColor="White" FontSize="14" HorizontalOptions="Center" />
                    <Label Text="{Binding Maqaoplussummarydata.Listedjobs}" TextColor="White" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <!-- Occupied Houses Card -->
            <Frame BackgroundColor="#0a506c" CornerRadius="10" Padding="15" HasShadow="True" WidthRequest="160">
                <StackLayout Spacing="5" HorizontalOptions="CenterAndExpand">
                    <Label Text="Occupied Houses" TextColor="White" FontSize="14" HorizontalOptions="Center" />
                    <Label Text="{Binding Maqaoplussummarydata.Occupiedhouses}" TextColor="White" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />
                </StackLayout>
            </Frame>
        </StackLayout>

        <!-- Main Content -->
    

        <!-- Overlay Layer for ActivityIndicator -->
        <Grid IsVisible="{Binding IsProcessing}" BackgroundColor="#f0f0f0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Grid.RowSpan="3">
            <BoxView Color="#ffffff" Opacity="0.5" />
            <ActivityIndicator IsRunning="{Binding IsProcessing}" VerticalOptions="Center" HorizontalOptions="Center" Color="#0a506c" HeightRequest="100" WidthRequest="100" />
        </Grid>

        <!-- Footer -->
        <StackLayout Grid.Row="2" BackgroundColor="#ffffff" Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="End">
            <Label Text="{Binding CopyrightText}" HorizontalOptions="CenterAndExpand" TextColor="#0a506c" TextTransform="Uppercase" FontAttributes="Bold"/>
        </StackLayout>
    </Grid>
</ContentPage>
