<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maqaoplus.Views.Dashboards.PropertyOwnerDashboardPage"
              Title="Dashboard">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Refresh" Command="{Binding LoadDataCommand}" />
    </ContentPage.ToolbarItems>

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Text="Property Dashboard" FontSize="24" FontAttributes="Bold" Grid.Row="0" />

        <CollectionView ItemsSource="{Binding Properties}" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="Gray">
                        <StackLayout>
                            <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold"/>
                            <Label Text="{Binding Units, StringFormat='Units: {0}'}"/>
                            <Label Text="{Binding OccupiedRooms, StringFormat='Occupied Rooms: {0}'}"/>
                            <Label Text="{Binding VacantRooms, StringFormat='Vacant Rooms: {0}'}"/>
                            <Label Text="{Binding ConsumedMeters, StringFormat='Consumed Meters: {0}'}"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
