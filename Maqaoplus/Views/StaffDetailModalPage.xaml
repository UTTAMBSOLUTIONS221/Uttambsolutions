<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maqaoplus.Views.StaffDetailModalPage"
             BackgroundColor="White"
             Padding="16">
    <StackLayout Spacing="16">
        <Label Text="Customer Details" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label Text="{Binding CustomerName}" FontSize="18" />
        <Label Text="{Binding CustomerEmail}" FontSize="18" />
        <Label Text="{Binding CustomerPhone}" FontSize="18" />

        <FlexLayout Direction="Row" JustifyContent="SpaceBetween" AlignItems="Center">
            <Button Text="Cancel" Command="{Binding CancelCommand}" BackgroundColor="Gray" TextColor="White" Padding="12" CornerRadius="5" WidthRequest="150" />
            <Button Text="OK" Command="{Binding OkCommand}" BackgroundColor="#0a506c" TextColor="White" Padding="12" CornerRadius="5" WidthRequest="150" />
        </FlexLayout>
    </StackLayout>
</ContentPage>
