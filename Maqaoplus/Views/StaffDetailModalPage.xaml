<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maqaoplus.Views.StaffDetailModalPage"
             BackgroundColor="White"
             Padding="16">
    <StackLayout Spacing="16">
        <Label Text="User Summary Details" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label Text="{Binding SystemStaffTenantData.Fullname}" FontSize="18" />
        <Label Text="{Binding Phonenumber}" FontSize="18" />
        <Label Text="{Binding Idnumber}" FontSize="18" />

        <FlexLayout Direction="Row" JustifyContent="SpaceBetween" AlignItems="Center">
            <Button Command="{Binding OnCancelButtonClickedCommand}" Text="Cancel" BackgroundColor="Gray" TextColor="White" Padding="12" CornerRadius="5" WidthRequest="150" />
            <Button x:Name="okButton" Text="OK" BackgroundColor="#0a506c" TextColor="White" Padding="12" CornerRadius="5" WidthRequest="150" />
        </FlexLayout>
    </StackLayout>
</ContentPage>
