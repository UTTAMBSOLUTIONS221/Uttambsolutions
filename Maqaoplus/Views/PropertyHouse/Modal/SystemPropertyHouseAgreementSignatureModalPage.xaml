<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SignaturePad.Forms;assembly=SignaturePad.Forms"
             x:Class="Maqaoplus.Views.PropertyHouse.Modal.SystemPropertyHouseAgreementSignatureModalPage"
             Title="System Property House Agreement Signature">
    <StackLayout Padding="10">
        <controls:SignaturePadView
            x:Name="signaturePad"
            WidthRequest="300"
            HeightRequest="200"
            StrokeColor="Black"
            BackgroundColor="White"
            StrokeWidth="2" />

        <Button Text="Save Signature" Clicked="OnSaveSignatureClicked"/>
    </StackLayout>
</ContentPage>
