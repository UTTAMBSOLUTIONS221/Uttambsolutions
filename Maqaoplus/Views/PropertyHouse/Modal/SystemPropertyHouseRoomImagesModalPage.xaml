<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maqaoplus.Views.PropertyHouse.Modal"
             x:Class="Maqaoplus.Views.PropertyHouse.Modal.SystemPropertyHouseRoomImagesModalPage"
             Title="System Property House Room Images">

    <VerticalStackLayout Padding="10">

        <!-- Capture and Pick Image Buttons -->
        <HorizontalStackLayout Spacing="10">
            <Button Text="Capture Image" Clicked="OnCaptureImageClicked"/>
            <Button Text="Pick Image" Clicked="OnPickImageClicked"/>
        </HorizontalStackLayout>

        <!-- Image View to Display Selected Image -->
        <Image x:Name="SelectedImage" WidthRequest="300" HeightRequest="200" Aspect="AspectFill" Margin="0,10"/>

        <!-- List View to Display Uploaded Images -->
        <CollectionView x:Name="ImagesCollectionView" ItemsSource="{Binding ImageUrls}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <ImageCell ImageSource="{Binding .}" Text="{Binding .}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
