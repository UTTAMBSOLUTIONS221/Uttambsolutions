<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maqaoplus.Views.Startup.RegisterPage"
             Title="Register"
             BackgroundColor="#F4F4F4">

    <ContentPage.Content>
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ScrollView Grid.Row="0">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Sign up to start interaction"
                           FontSize="24"
                           HorizontalOptions="Center"
                           TextColor="#0a506c"
                           FontAttributes="Bold" />

                    <Frame BackgroundColor="White"
                           BorderColor="#e0e0e0"
                           CornerRadius="10"
                           HasShadow="True"
                           Padding="10"
                           Margin="0,10">
                        <VerticalStackLayout Spacing="7">

                            <!-- First Name Entry with Frame and Image -->
                            <Frame BackgroundColor="White" 
                                   BorderColor="#e0e0e0" 
                                   CornerRadius="10" 
                                   Padding="4" 
                                   Margin="0,8" 
                                   HasShadow="True">
                                <HorizontalStackLayout Spacing="3">
                                    <Image Source="user.png" 
                                           WidthRequest="20" 
                                           HeightRequest="20" 
                                           VerticalOptions="Center" />
                                    <Entry Placeholder="First Name"
                                           ReturnType="Next"
                                           Text="{Binding FirstName}"
                                           TextColor="Black"
                                           FontSize="16" 
                                           PlaceholderColor="#888888"/>
                                </HorizontalStackLayout>
                            </Frame>

                            <!-- Last Name Entry with Frame and Image -->
                            <Frame BackgroundColor="White" 
                                   BorderColor="#e0e0e0" 
                                   CornerRadius="10" 
                                   Padding="4" 
                                   Margin="0,8" 
                                   HasShadow="True">
                                <HorizontalStackLayout Spacing="3">
                                    <Image Source="user.png" 
                                           WidthRequest="20" 
                                           HeightRequest="20" 
                                           VerticalOptions="Center" />
                                    <Entry Placeholder="Last Name"
                                           ReturnType="Next"
                                           Text="{Binding LastName}"
                                           TextColor="Black"
                                           FontSize="16"
                                           PlaceholderColor="#888888"/>
                                </HorizontalStackLayout>
                            </Frame>

                            <!-- Email Address Entry with Frame and Image -->
                            <Frame BackgroundColor="White" 
                                   BorderColor="#e0e0e0" 
                                   CornerRadius="10" 
                                   Padding="4" 
                                   Margin="0,8" 
                                   HasShadow="True">
                                <HorizontalStackLayout Spacing="3">
                                    <Image Source="email.png" 
                                           WidthRequest="20" 
                                           HeightRequest="20" 
                                           VerticalOptions="Center" />
                                    <Entry Placeholder="Email Address"
                                           Text="{Binding EmailAddress}"
                                           Keyboard="Email"
                                           FontSize="16"
                                           TextColor="Black"
                                           PlaceholderColor="#888888"/>
                                </HorizontalStackLayout>
                            </Frame>

                            <!-- Phone Number Entry with Frame and Image -->
                            <Frame BackgroundColor="White" 
                                   BorderColor="#e0e0e0" 
                                   CornerRadius="10" 
                                   Padding="4" 
                                   Margin="0,8" 
                                   HasShadow="True">
                                <HorizontalStackLayout Spacing="3">
                                    <Image Source="phone.png" 
                                           WidthRequest="20" 
                                           HeightRequest="20" 
                                           VerticalOptions="Center" />
                                    <Entry Placeholder="Phone Number"
                                           Text="{Binding PhoneNumber}"
                                           Keyboard="Telephone"
                                           FontSize="16"
                                           TextColor="Black"
                                           PlaceholderColor="#888888"/>
                                </HorizontalStackLayout>
                            </Frame>

                            <!-- Password Entry with Frame and Image -->
                            <Frame BackgroundColor="White" 
                                   BorderColor="#e0e0e0" 
                                   CornerRadius="10" 
                                   Padding="4" 
                                   Margin="0,8" 
                                   HasShadow="True">
                                <HorizontalStackLayout Spacing="3">
                                    <Image Source="passwordicon.png" 
                                           WidthRequest="20" 
                                           HeightRequest="20" 
                                           VerticalOptions="Center" />
                                    <Entry IsPassword="True" 
                                           Placeholder="Password" 
                                           ReturnType="Done" 
                                           Text="{Binding Password}" 
                                           TextColor="Black" 
                                           FontSize="16" 
                                           PlaceholderColor="#888888"/>
                                </HorizontalStackLayout>
                            </Frame>

                            <!-- Confirm Password Entry with Frame and Image -->
                            <Frame BackgroundColor="White" 
                                   BorderColor="#e0e0e0" 
                                   CornerRadius="10" 
                                   Padding="4" 
                                   Margin="0,8" 
                                   HasShadow="True">
                                <HorizontalStackLayout Spacing="3">
                                    <Image Source="passwordicon.png" 
                                           WidthRequest="20" 
                                           HeightRequest="20" 
                                           VerticalOptions="Center" />
                                    <Entry Placeholder="Confirm Password"
                                           Text="{Binding ConfirmPassword}"
                                           IsPassword="True"
                                           FontSize="16"
                                           TextColor="Black"
                                           PlaceholderColor="#888888"/>
                                </HorizontalStackLayout>
                            </Frame>

                        </VerticalStackLayout>
                    </Frame>

                    <Button BackgroundColor="#0a506c"
                            Command="{Binding SignUpCommand}"
                            CornerRadius="8"
                            Text="Register"
                            TextColor="White"
                            FontSize="18"
                            HeightRequest="50"
                            FontAttributes="Bold" />

                    <Label Text="* Required fields"
                           FontSize="12"
                           HorizontalOptions="Center"
                           TextColor="Gray" />
                </VerticalStackLayout>
            </ScrollView>

            <!-- Footer -->
            <StackLayout Grid.Row="1" BackgroundColor="#f8f8f8" Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="End">
                <Label Text="Â© 2024 Maqaoplus" 
                       HorizontalOptions="Center" 
                       TextColor="#0a506c" 
                       TextTransform="Uppercase" 
                       FontAttributes="Bold"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
