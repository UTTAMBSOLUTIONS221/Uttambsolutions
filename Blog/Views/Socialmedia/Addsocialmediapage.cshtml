@model DBL.Entities.SocialMediaSettings
<div class="modal-header">
    <h5 class="text-sm modal-title" id="Uttambsolutionsmodallabel">Social Settings</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-sm-12">
            <input asp-for="@Model.SocialSettingId" id="SocialSettingId" hidden />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Page Name</label>
                <input class="form-control form-control-sm" asp-for="@Model.Socialpagename" id="Socialpagenameid" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Access Token</label>
                <input class="form-control form-control-sm" asp-for="@Model.UserAccessToken" id="UserAccessTokenid" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">App Id</label>
                <input class="form-control form-control-sm" asp-for="@Model.Appid" id="Appid" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">App Secret</label>
                <input class="form-control form-control-sm" asp-for="@Model.Appsecret" id="Appsecretid" />
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" id="savesystemsocialmediaid" onclick="savesystemsocialmediadata();">
        <span id="buttonText">SAVE</span><span id="processingSpinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true" style="display: none;"></span>
    </button>
</div>
