<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mainapp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Mainapp"
    Shell.TabBarIsVisible="False"
    xmlns:startupPages="clr-namespace:Mainapp.Views.Startup"
    xmlns:sokojijiDashboardPages="clr-namespace:Mainapp.Miniapps.Ecommerce.Views">


    <ShellContent FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate startupPages:LoadingPage}" Route="LoadingPage" />

    <ShellContent
        Title="Login Page" FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate startupPages:LoginPage}"
        Route="LoginPage" />

    <ShellContent
    Title="Dashboard Page" FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
    ContentTemplate="{DataTemplate sokojijiDashboardPages:SokojijiDashboardPage}"
    Route="SokojijiDashboardPage" />


    <Shell.FlyoutFooter>
        <StackLayout Padding="20">
            <Button Text="Sign Out" FontAttributes="Bold" Command="{Binding SignOutCommand}" />
        </StackLayout>
    </Shell.FlyoutFooter>

</Shell>