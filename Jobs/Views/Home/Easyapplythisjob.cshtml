    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var existingCV = document.getElementById('existingCV');
            var newCV = document.getElementById('newCV');
            var uploadCV = document.getElementById('uploadCV');

            function toggleCVUpload() {
                uploadCV.style.display = newCV.checked ? 'block' : 'none';
            }

            existingCV.addEventListener('change', toggleCVUpload);
            newCV.addEventListener('change', toggleCVUpload);

