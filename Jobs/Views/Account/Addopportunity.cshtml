@model DBL.Entities.SystemJob
@{
    var Systemorganization = ViewData["Systemorganizationlists"] as List<SelectListItem>;
    var Systemjobfunction = ViewData["Systemjobfunctionlists"] as List<SelectListItem>;
    var Systemjobindustry = ViewData["Systemjobindustrylists"] as List<SelectListItem>;
    var Systemjoblocation = ViewData["Systemjoblocationlists"] as List<SelectListItem>;
    var Systemjobexperience = ViewData["Systemjobexperiencelists"] as List<SelectListItem>;
    var Systemjobtype = ViewData["Systemjobtypelists"] as List<SelectListItem>;
}
<div class="modal-header">
    <h5 class="modal-title" id="Uttambsolutionsmodallabel">Job Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <!-- Section 1: Job Details -->
    <div id="section1" class="section">
        <h6 class="mb-3">Step 1: Job Details</h6>
        <input asp-for="@Model.JobId" id="JobId" hidden />
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="font-weight-light">Job Employer</label>
                    <select class="form-control form-control-sm" asp-for="@Model.EmployerId" asp-items="Systemorganization" id="JobEmployerId" required>
                        <option value="">---Select---</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="form-group">
                    <label class="font-weight-light">Job Title</label>
                    <input class="form-control form-control-sm" asp-for="@Model.Title" id="Titleid" required />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="font-weight-light">Job Function</label>
                    <select class="form-control form-control-sm" asp-for="@Model.JobFunctionId" asp-items="Systemjobfunction" id="JobFunctionId" required>
                        <option value="">---Select---</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="font-weight-light">Job Industry</label>
                    <select class="form-control form-control-sm" asp-for="@Model.JobIndustryId" asp-items="Systemjobindustry" id="JobIndustryId" required>
                        <option value="">---Select---</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="font-weight-light">Job Location</label>
                    <select class="form-control form-control-sm" asp-for="@Model.JobLocationId" asp-items="Systemjoblocation" id="JobLocationId" required>
                        <option value="">---Select---</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="font-weight-light">Job Experience</label>
                    <select class="form-control form-control-sm" asp-for="@Model.JobExperienceId" asp-items="Systemjobexperience" id="JobExperienceId" required>
                        <option value="">---Select---</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="font-weight-light">Job Type</label>
                    <select class="form-control form-control-sm" asp-for="@Model.JobTypeId" asp-items="Systemjobtype" id="JobTypeId" required>
                        <option value="">---Select---</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-2 d-flex align-items-center mt-2">
                <div class="custom-control custom-checkbox small-checkbox">
                    <input class="custom-control-input" type="checkbox" asp-for="@Model.EasyApply" id="EasyApplyid" />
                    <label class="custom-control-label text-sm font-weight-light text-nowrap nowrap" for="EasyApplyid">Easy apply?</label>
                </div>
            </div>
            <div class="col-sm-2 d-flex align-items-center mt-2">
                <div class="custom-control custom-checkbox small-checkbox">
                    <input class="custom-control-input" type="checkbox" asp-for="@Model.HasTest" id="JobHasTestid" />
                    <label class="custom-control-label text-sm font-weight-light text-nowrap nowrap" for="JobHasTestid">Has Test?</label>
                </div>
            </div>
            <div class="col-sm-2 d-flex align-items-center mt-2">
                <div class="custom-control custom-checkbox small-checkbox">
                    <input class="custom-control-input" type="checkbox" asp-for="@Model.IsFeatured" id="IsJobFeaturedid" />
                    <label class="custom-control-label text-sm font-weight-light text-nowrap nowrap" for="IsJobFeaturedid">Is Featured?</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-5">
                <div class="form-group">
                    <label class="font-weight-light">Job URL</label>
                    <input class="form-control form-control-sm" asp-for="@Model.JobUrl" id="JobUrlid" required />
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="font-weight-light">Deadline</label>
                    <input class="form-control form-control-sm" type="date" asp-for="@Model.Deadline" id="Deadlineid" required />
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group mb-0">
                    <label class="font-weight-light">Salary Range</label>
                    <input class="form-control form-control-sm" asp-for="@Model.JobSalaryRange" id="JobSalaryRangeid" required />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="font-weight-light">Job Description</label>
            <textarea class="form-control form-control-sm" asp-for="@Model.JobDescription" id="JobDescriptionid" required></textarea>
        </div>
        <button type="button" class="btn btn-sm btn-secondary float-right" onclick="nextSection()">Next</button>
    </div>
    <!-- Section 2: Key Responsibilities -->
    <div id="section2" class="section" style="display: none;">
        <h6 class="mb-4 font-weight-bold">Step 2: Key Responsibilities</h6>
        <div class="card">
            <div class="card-body">
                <input class="form-control form-control-sm d-none" id="ResponsibilityId" />
                <div class="form-group mb-3">
                    <label class="font-weight-medium" for="ResponsibilityInput">Responsibility</label>
                    <input class="form-control form-control-sm" id="ResponsibilityInput" placeholder="Enter responsibility here" />
                </div>
                <div class="form-group mb-3">
                    <label class="font-weight-medium" for="FunctionInput">Function</label>
                    <input class="form-control form-control-sm" id="FunctionInput" placeholder="Enter function here" />
                    <button class="btn btn-sm btn-secondary mt-2" onclick="addFunction()">Add Function</button>
                </div>
                <div class="form-group mb-3">
                    <label class="font-weight-medium">Functions</label>
                    <ul id="FunctionList" class="list-group mb-3">
                        <!-- Function items will be added here -->
                    </ul>
                </div>
                <button class="btn btn-sm btn-primary float-right" onclick="addResponsibility()">Add Responsibility</button>
            </div>
        </div>
        <div class="table-responsive mt-4">
            <table class="table table-bordered table-striped table-sm text-nowrap w-100" id="ResponsibilitiesTable">
                <thead class="thead-dark">
                    <tr>
                        <th>Responsibility</th>
                        <th>Functions</th>
                        <th class="text-right">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Table rows will be inserted here dynamically -->
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-between mt-4">
            <button type="button" class="btn btn-sm btn-secondary" onclick="prevSection()">Previous</button>
            <button type="button" class="btn btn-sm btn-secondary" onclick="nextSection()">Next</button>
        </div>
    </div>

    <!-- Section 3: Preferred Skills -->
    <div id="section3" class="section" style="display: none;">
        <h6 class="mb-3">Step 3: Preferred Skills</h6>
        <div class="card">
            <div class="card-body">
                <input class="form-control form-control-sm font-weight-light" id="ProductFeatureId" hidden />
                <div class="form-group">
                    <label class="font-weight-light">Skill</label>
                    <input class="form-control form-control-sm font-weight-light" id="SystemblogparagraphId" />
                </div>
                <button class="btn btn-sm btn-info font-weight-bold float-right" onclick="addsystemblogparagraphdata()">Add</button>
            </div>
        </div>
        <div class="table-responsive mt-3">
            <table class="table table-bordered table-striped table-sm text-nowrap w-100" id="AllsystemDataTables">
                <thead>
                    <tr>
                        <th hidden></th>
                        <th>Skill</th>
                        <th class="text-right">Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <button type="button" class="btn btn-sm btn-secondary float-left" onclick="prevSection()">Previous</button>
        <button type="button" class="btn btn-sm btn-secondary float-right" onclick="nextSection()">Next</button>
    </div>

    <!-- Section 4: Benefits -->
    <div id="section4" class="section" style="display: none;">
        <h6 class="mb-3">Step 4: Benefits</h6>
        <div class="card">
            <div class="card-body">
                <input class="form-control form-control-sm font-weight-light" id="ProductFeatureId" hidden />
                <div class="form-group">
                    <label class="font-weight-light">Benefit</label>
                    <input class="form-control form-control-sm font-weight-light" id="SystemblogparagraphId" />
                </div>
                <button class="btn btn-sm btn-info font-weight-bold float-right" onclick="addsystemblogparagraphdata()">Add</button>
            </div>
        </div>
        <div class="table-responsive mt-3">
            <table class="table table-bordered table-striped table-sm text-nowrap w-100" id="AllsystemDataTables">
                <thead>
                    <tr>
                        <th hidden></th>
                        <th>Benefit</th>
                        <th class="text-right">Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <button type="button" class="btn btn-sm btn-secondary float-left" onclick="prevSection()">Previous</button>
        <button type="button" class="btn btn-sm btn-secondary float-right" onclick="nextSection()">Next</button>
    </div>


    <!-- Section 4: Qualifications -->
    <div id="section4" class="section" style="display: none;">
        <h6 class="mb-3">Step 4: Qualifications</h6>
        <div class="card">
            <div class="card-body">
                <input class="form-control form-control-sm font-weight-light" id="ProductFeatureId" hidden />
                <div class="form-group">
                    <label class="font-weight-light">Qualification</label>
                    <input class="form-control form-control-sm font-weight-light" id="SystemblogparagraphId" />
                </div>
                <button class="btn btn-sm btn-info font-weight-bold float-right" onclick="addsystemblogparagraphdata()">Add</button>
            </div>
        </div>
        <div class="table-responsive mt-3">
            <table class="table table-bordered table-striped table-sm text-nowrap w-100" id="AllsystemDataTables">
                <thead>
                    <tr>
                        <th hidden></th>
                        <th>Qualification</th>
                        <th class="text-right">Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <button type="button" class="btn btn-sm btn-secondary float-left" onclick="prevSection()">Previous</button>
        <button type="button" class="btn btn-sm btn-secondary float-right" onclick="nextSection()">Next</button>
    </div>

    <!-- Section 5: Conclusion -->
    <div id="section5" class="section" style="display: none;">
        <h6 class="mb-3">Step 5: Job Conclusion</h6>
        <div class="card">
            <div class="card-body">
                <input class="form-control form-control-sm font-weight-light" id="ProductFeatureId" hidden />
                <div class="form-group">
                    <label class="font-weight-light">Reports to</label>
                    <input class="form-control form-control-sm font-weight-light" id="SystemblogparagraphId" />
                </div>
                <div class="form-group">
                    <label class="font-weight-light">How to Apply</label>
                    <textarea class="form-control form-control-sm font-weight-light" id="SystemblogparagraphId"></textarea>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-sm btn-secondary float-left" onclick="prevSection()">Previous</button>
        <button class="btn btn-sm btn-info font-weight-bold ml-1" type="button" id="saveopportunityid" onclick="saveopportunitydata();">
            <span id="buttonText">Save</span>
            <span id="processingSpinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true" style="display: none;"></span>
        </button>
    </div>
</div>
