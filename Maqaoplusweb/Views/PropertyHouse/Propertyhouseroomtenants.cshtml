@model DBL.Models.PropertyHouseTenantData
@{
    ViewData["Title"] = "Propertyhouseroomtenants";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card card-outline card-info">
            <div class="card-header py-1">
                <div class="row">
                    <div class="col-sm-12">
                        <h6 class="font-weight-bold text-sm card-title">Property House Tenants</h6>
                    </div>
                </div>
            </div>
            <div class="card-body table-responsive table-responsive-sm">
                <table class="table table-bordered table-striped compact table-sm table-responsive-sm nowrap text-nowrap" id="AllsystemDataTables">
                    <thead>
                        <tr>
                            <th>House</th>
                            <th>Tenant</th>
                            <th>Room</th>
                            <th>Is Occupant</th>
                            <th>Status</th>
                            <th>Balance</th>
                            <th>Tenant From</th>
                            <th>Tenant To</th>
                            <th>Date Created</th>
                            <th class="text-right">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Data != null)
                        {
                            foreach (var item in Model.Data)
                            {
                                <tr>
                                    <td>@item.Propertyhousename</td>
                                    <td>@item.Tenantname</td>
                                    <td>@item.Systempropertyhousesizename</td>
                                    <td>
                                        @if (item.Isoccupant)
                                        {
                                            <span class="badge badge-success custom-badge"><strong>Yes</strong></span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success custom-badge"><strong>No</strong></span>
                                        }
                                    </td>
                                    <td>@item.Occupationalstatus</td>
                                    <td>@item.Walletbalance</td>
                                    <td>@item.Datecreated.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @if (item.Isoccupant)
                                        {
                                            <span class="badge badge-success custom-badge">Still Tenant</span>
                                        }
                                        else
                                        {
                                            @item.Datecreated.ToString("yyyy-MM-dd")
                                        }
                                    </td>
                                    <td>@item.Datecreated.ToString("yyyy-MM-dd")</td>
                                      <td class="text-right">
                                        <a asp-action="Addpropertyhouseroom" asp-controller="PropertyHouse" asp-route-code="@Guid.NewGuid()" asp-route-Houseroomid="@item.Systempropertyhousetenantid" asp-area="" id="CAN_EDIT_PROPERTY" style="display:none;" class="btn-info btn-xs btn-outline-info text-white font-weight-bold text-uppercase main" data-target="#Uttambsolutionsmodallarge" data-toggle="modal" data-backdrop="static" data-keyboard="false">Manage</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>