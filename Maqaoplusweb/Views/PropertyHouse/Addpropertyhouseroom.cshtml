@model DBL.Models.Systempropertyhouseroomdata
@{
    var Systempropertyhousesize = ViewData["Systempropertyhousesizelists"] as List<SelectListItem>;
    var Systemkitchentype = ViewData["Systemkitchentypelists"] as List<SelectListItem>;
}
<div class="modal-header">
    <h5 class="text-sm modal-title" id="Uttambsolutionsmodallabel">House Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <input class="form-control form-control-sm" asp-for="@Model.Data.Systempropertyhouseroomid" id="Systempropertyhouseroomid" hidden />
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Kitchen Type</label>
                <select class="form-control form-control-sm" asp-for="@Model.Data.Kitchentypeid" asp-items="@Systemkitchentype" id="Kitchentypeid">
                    <option value="">---Select---</option>
                </select>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">Size Name</label>
                <select class="form-control form-control-sm" asp-for="@Model.Data.Systempropertyhousesizeid" asp-items="@Systempropertyhousesize" id="Systempropertyhousesizeid">
                    <option value="">---Select---</option>
                </select>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label class="font-weight-light">House Room #</label>
                <input class="form-control form-control-sm" asp-for="@Model.Data.Systempropertyhousesizename" id="Systempropertyhousesizenameid" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <div class="form-group form-check">
                <input class="form-check-input" type="checkbox" asp-for="@Model.Data.Forcaretaker" id="Forcaretakerid" />
                <label class="form-check-label text-sm" for="Forcaretakerid">For Caretaker?</label>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group form-check">
                <input class="form-check-input" type="checkbox" asp-for="@Model.Data.Isshop" id="Isshopid" />
                <label class="form-check-label text-sm" for="Isshopid">Is Shop?</label>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group form-check">
                <input class="form-check-input" type="checkbox" asp-for="@Model.Data.Isgroundfloor" id="Isgroundfloorid" />
                <label class="form-check-label text-sm" for="Isgroundfloorid">Ground Floor?</label>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group form-check">
                <input class="form-check-input" type="checkbox" asp-for="@Model.Data.Hasbalcony" id="Hasbalconyid" />
                <label class="form-check-label text-sm" for="Hasbalconyid">Has Balcony?</label>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group form-check">
                <input class="form-check-input" type="checkbox" asp-for="@Model.Data.Isunderrenovation" id="Isunderrenovationid" />
                <label class="form-check-label" for="Isunderrenovationid">Under Renovation?</label>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-7">
            <div class="row">
                <div class="col-sm-12 table-responsive">
                    <table class="table table-bordered table-striped compact table-sm nowrap text-nowrap w-100" id="roommeterreadingtable">
                        <thead>
                            <tr>
                                <th hidden>Meterid</th>
                                <th hidden>Roomsizeid</th>
                                <th class="font-weight-light fw-light text-sm">Meter</th>
                                <th class="font-weight-light fw-light text-sm">Opening</th>
                                <th class="font-weight-light fw-light text-sm">Closing</th>
                                <th class="font-weight-light fw-light text-sm">Units</th>
                                <th class="font-weight-light fw-light text-sm">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td hidden><input type="text" class="form-control form-control-sm font-weight-light system-property-house-meterid" value="@Model.Data.Systempropertyhousemeterid" /></td>
                                <td hidden><input type="text" class="form-control form-control-sm font-weight-light system-property-house-roomid" value="@Model.Data.Systempropertyhouseroomid" /></td>
                                <td><input type="text" class="form-control form-control-sm font-weight-light system-property-house-room-meter-number" value="@Model.Data.Systempropertyhouseroommeternumber" /></td>
                                <td><input type="text" class="form-control form-control-sm font-weight-light system-property-house-room-opening-meter" value="@Model.Data.Openingmeter" @((Model.Data.Hasprevious && Model.Data.Openingmeter != 0) ? "readonly" : "") /></td>
                                <td><input type="number" class="form-control form-control-sm font-weight-light system-property-house-room-closing-meter" value="@Model.Data.Closingmeter" required /></td>
                                <td><input type="number" class="form-control form-control-sm font-weight-light system-property-house-room-moved-meter" value="@Model.Data.Movedmeter" readonly /></td>
                                <td><input type="number" class="form-control form-control-sm font-weight-light system-property-house-room-meter-cost" value="@Model.Data.Consumedamount" readonly /></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 table-responsive">
                    <table class="table table-bordered table-striped compact table-sm nowrap text-nowrap w-100" id="AllsystemDataTables1">
                        <thead>
                            <tr>
                                <th class="font-weight-light fw-light text-sm">Meter</th>
                                <th class="font-weight-light fw-light text-sm">Opening</th>
                                <th class="font-weight-light fw-light text-sm">Closing</th>
                                <th class="font-weight-light fw-light text-sm">Units</th>
                                <th class="font-weight-light fw-light text-sm">Bill</th>
                                <th class="font-weight-light fw-light text-sm">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Data != null && Model.Data.Meterhistorydata != null)
                            {
                                foreach (var item in Model.Data.Meterhistorydata)
                                {
                                    <tr>
                                        <td class="font-weight-light fw-light text-sm">@item.Systempropertyhouseroommeternumber</td>
                                        <td class="font-weight-light fw-light text-sm">@item.Openingmeter</td>
                                        <td class="font-weight-light fw-light text-sm">@item.Closingmeter</td>
                                        <td class="font-weight-light fw-light text-sm">@item.Movedmeter</td>
                                        <td class="font-weight-light fw-light text-sm">@item.Consumedamount</td>
                                        <td class="font-weight-light fw-light text-sm">@item.Datecreated</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="input-group">
                <input type="number" class="form-control form-control-sm" id="Systemstaffidnumberid" placeholder="Enter id number to search" aria-label="Idnumbersearch" />
                <div class="input-group-append">
                    <button class="btn btn-sm btn-secondary" onclick="searchsystemstaffdata()">Search</button>
                </div>
            </div>
            <div id="searchResults" class="col-sm-12 d-none">
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" id="savesystempropertyroomid" onclick="savesystempropertyroomdata();">
        <span id="buttonText">SAVE</span><span id="processingSpinner" class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true" style="display: none;"></span>
    </button>
</div>
