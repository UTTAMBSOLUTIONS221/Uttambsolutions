@model DBL.Models.Dashboards.PropertyHouseSummaryDashboard
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <!-- Summary Section -->
    <div class="row mb-4">
        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <img src="~/images/house.png" class="img-fluid" style="height: 40px; width: 40px;" />
                    <h5 class="card-title text-primary font-weight-bold">Total Units</h5>
                    <h3 class="text-dark font-weight-bold">@Model.Data.Propertyhouseunits</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <img src="~/images/house.png" class="img-fluid" style="height: 40px; width: 40px;" />
                    <h5 class="card-title text-primary font-weight-bold">Occupied Rooms</h5>
                    <h3 class="text-dark font-weight-bold">@Model.Data.Systempropertyoccupiedroom </h3>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <img src="~/images/house.png" class="img-fluid" style="height: 40px; width: 40px;" />
                    <h5 class="card-title text-primary font-weight-bold">Vacant Rooms</h5>
                    <h3 class="text-dark font-weight-bold">@Model.Data.Systempropertyvacantroom</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <img src="~/images/tap.png" class="img-fluid" style="height: 40px; width: 40px;" />
                    <h5 class="card-title text-primary font-weight-bold">Water Units</h5>
                    <h3 class="text-dark font-weight-bold">@Model.Data.Consumedmeters.ToString("#,##0.00")</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <img src="~/images/dollar.png" class="img-fluid" style="height: 40px; width: 40px;" />
                    <h5 class="card-title text-primary font-weight-bold">Expected Amount</h5>
                    <h3 class="text-dark font-weight-bold">@Model.Data.Expectedcollections.ToString("#,##0.00")</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <img src="~/images/dollar.png" class="img-fluid" style="height: 40px; width: 40px;" />
                    <h5 class="card-title text-primary font-weight-bold">Collected Amount</h5>
                    <h3 class="text-dark font-weight-bold">@Model.Data.Collectedcollections.ToString("#,##0.00")</h3>
                </div>
            </div>
        </div>
        <div class="col-12 mb-3">
            <div class="card border-primary">
                <div class="card-body d-flex align-items-center">
                    <img src="~/images/dollar.png" class="img-fluid" style="height: 40px; width: 40px;" />
                    <div class="ml-3">
                        <h5 class="card-title text-primary font-weight-bold">Uncollected Payments</h5>
                        <h3 class="text-dark font-weight-bold">@Model.Data.Uncollectedpayments.ToString("#,##0.00")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Property Summary Section -->
    <div class="card shadow mb-4">
        <div class="card-header text-center bg-primary text-white font-weight-bold">Property Summary</div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>House</th>
                        <th>Unit</th>
                        <th>Occupied</th>
                        <th>Vacant</th>
                        <th>Meter</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var property in Model.Data.Propertybysummary)
                    {
                        <tr>
                            <td>@property.Propertyhousename</td>
                            <td>@property.Propertyhouseunits</td>
                            <td>@property.Systempropertyoccupiedroom</td>
                            <td>@property.Systempropertyvacantroom</td>
                            <td>@property.Consumedmeters</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
